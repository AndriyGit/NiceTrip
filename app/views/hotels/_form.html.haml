%h1= t('add_new_hotel')

= form_for @object do |f|
  - if @object.errors.any?
    #error_explanation
      %h2= "#{pluralize(@object.errors.count, "error")} prohibited this data from being saved:"
      %ul
        - @object.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name, t('name')
    = f.text_field :name
  .field
    = f.label :address, t('address')
    = f.text_area :address
  .field
    = f.label :rating, t('rating')
    = f.number_field :rating
  .field
    = f.label :image, t('images')
    = f.file_field :image
  .field
    = f.label :min_price, t('min_price')
    = f.number_field :min_price
  .field
    = f.label :number_of_stars, t('number_of_stars')
    = f.number_field :number_of_stars, in: 1...8
  .field
    = f.hidden_field :latitude, :value => 50
  .field
    = f.hidden_field :longitude, :value => 50
  .actions
    = f.submit t('save')
