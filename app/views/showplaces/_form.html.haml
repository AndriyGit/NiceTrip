%h1= t('add_new_showplace')

= form_for @object do |f|
  - if @object.errors.any?
    #error_explanation
      %h2= "#{pluralize(@object.errors.count, "error")} prohibited this data from being saved:"
      %ul
        - @object.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name, t('name')
    = f.text_field :name
  .field
    = f.label :kind, t('kind_of_showplace')
    = f.text_area :kind
  .field
    = f.label :rating, t('raiting')
    = f.text_field :rating
  .field
    = f.label :image, t('Add image')
    = f.file_field :image
  .actions
    = f.submit t('save')
