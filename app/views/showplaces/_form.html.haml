%h1= t('add_new_showplace')

= form_for @object do |f|
  - if @object.errors.any?
    #error_explanation
      %h2= "#{pluralize(@object.errors.count, "error")} prohibited this data from being saved:"
      %ul
        - @object.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name, t('name')
    = f.text_field :name
  .field
    = f.label :kind, t('kind_of_showplace')
    = f.select :kind, options_for_select(Showplace::KINDS::ALL)
  .field
    = f.label :address, t('address')
    = f.text_area :address
  .field
    = f.label :rating, t('rating')
    = f.number_field :rating, in: 1...11
  .field
    = f.label :image, t('images')
    = f.file_field :image
  .field
    = f.hidden_field :latitude, :value => 60
  .field
    = f.hidden_field :longitude, :value => 60
  .actions
    = f.submit t('save')
