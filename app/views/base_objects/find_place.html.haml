.booking
  .container
    .booking-info
      %h3= t("find_place")
    .row
      #error{style: 'height: 20px;  padding-left: 15px; color: red;'}
    .row
      .col-md-2
        .radius
          %label= t('radius')
          = text_field_tag nil, '10', type: 'range', min: '1', max: '50', step: '1', id: 'radius_range'
          %span#radius 10km
        %br
        .form-group
          = text_field_tag :city, nil, class: "form-control", placeholder: "City"
          %br
          = submit_tag t('search'), type: 'button', class: 'btn btn-primary', id: 'search_city', disabled: true
        .form-group
          = build_select_type_of_place('show_all', false, true)
        %br
        = submit_tag t('show_all'), class: 'btn btn-success', disabled: true, style: "display: none;"
      .col-md-10
        #search-result-map
          = render 'shared/search_result_map'
    %br
.clearfix
:javascript
  addSearch();
