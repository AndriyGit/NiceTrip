.container
  .head-logo
    = link_to image_tag('logo1.png'), ""
  .top-nav
    %span.menu
      = image_tag('menu.png')
    %ul.cl-effect-1
      %li
        = link_to t('home'), '/'
      %li
        = link_to t('about'), '#'
      %li
        = link_to t('booking'), '#'
      %li
        = link_to t('add_new_place'), '#'
        %ul.sub-menu
          %li
            = link_to t('hotel'), new_base_object_path(type: 'hotel')
          %li
            = link_to t('showplace'), new_base_object_path(type: 'showplace')
          %li
            = link_to t('catering'), new_base_object_path(type: 'catering')
      %li
        = link_to t('mail_us'), '#'
    :javascript
      $( "span.menu" ).click(function() {
        $( "ul.cl-effect-1" ).slideToggle( 300, function() { });
      });
  .clearfix