:javascript
  var SearchMap = new GMaps({
    div: '#search-result-map',
    lat: 49.4411696,
    lng: 32.0660754
  });
  GMaps.geolocate({
    success: function(position) {
      SearchMap.setCenter(position.coords.latitude, position.coords.longitude);
      SearchMap.addMarker({
        lat: position.coords.latitude,
        lng: position.coords.longitude,
        title: 'You are here!',
        infoWindow: {
          content: '<p>You are here!</p>'
        },
        icon: '#{current_user.image_url(:for_map)}'
      });
    },
    error: function(error) {
      alert('Geolocation failed: '+error.message);
    },
    not_supported: function() {
    },
    always: function() {
    }
  });